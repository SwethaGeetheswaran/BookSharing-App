<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_post_activity">

    <EditText
        android:id="@+id/user_post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingTop="40dp"
        android:hint="@string/post_text"
        android:autofillHints="@string/post_text"
        android:gravity="start|top"
        android:inputType="textMultiLine" />


    <ImageButton
        android:id="@+id/user_post_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:layout_below="@id/user_post_text"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/user_post_it_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_post_image"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="120dp"
        android:background="@color/colorPurple"
        android:padding="10dp"
        android:text="@string/post_it_button"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />
</RelativeLayout>