<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_profile"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:id="@+id/receiver_inMsg_profile_image"/>

    <TextView
        android:id="@+id/receiver_inMsg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/receiver_inMsg_profile_image"
        android:background="@drawable/receiver_msg_txt"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="@string/receiver_text"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/sender_inMsg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:layout_toStartOf="@id/sender_inMsg_profile_image"
        android:background="@drawable/sender_msg_txt"
        android:text="@string/sender_text"
        android:textSize="13sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_inMsg_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_profile" />


</RelativeLayout>